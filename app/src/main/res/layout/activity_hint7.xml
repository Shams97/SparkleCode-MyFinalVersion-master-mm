<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#782C6D"
    tools:context=".hint7">

    <Button
        android:id="@+id/check"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbttn"
        android:fontFamily="@font/gabriola"
        android:text="Try Again !"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="377dp"
        android:layout_height="181dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="@dimen/text_margin"
        android:text="@string/for_question"
        android:textAlignment="center"
        android:textColor="@color/LightTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <LinearLayout
        android:id="@+id/bigliner"
        android:layout_width="348dp"
        android:layout_height="174dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedinput"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537">

        <Button
            android:id="@+id/redIf"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/red"
            android:text="for x in range(1,6):"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/blueYes"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/darkblue"
            android:text="print(x)"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>