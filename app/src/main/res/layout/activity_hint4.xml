<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinko"
    tools:context=".hint4">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="375dp"
        android:layout_height="118dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/gabriola"
        android:padding="@dimen/text_margin"
        android:text="@string/hint1_text"
        android:textAlignment="center"
        android:textColor="@color/LightTextColor"
        android:textSize="@dimen/hint_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <LinearLayout
        android:id="@+id/bigliner"
        android:layout_width="341dp"
        android:layout_height="299dp"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedinput"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.616">


        <Button
            android:id="@+id/red_c"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/brown"
            android:fontFamily="@font/gabriola"
            android:textColor="#fff"
            android:textSize="24dp" />

        <Button
            android:id="@+id/blue_o"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/darkblue"
            android:fontFamily="@font/gabriola"
            android:textColor="#fff"
            android:textSize="24dp" />

        <Button
            android:id="@+id/green_d"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/greeny"
            android:fontFamily="@font/gabriola"
            android:textColor="#fff"
            android:textSize="24dp" />

        <Button
            android:id="@+id/pink_e"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/red"
            android:fontFamily="@font/gabriola"
            android:textColor="#fff"
            android:textSize="24dp" />


    </LinearLayout>
    <Button
        android:id="@+id/tryagain"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbttn"
        android:fontFamily="@font/gabriola"
        android:text="Try Again !"
        android:textColor="@color/textcolor"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />
</android.support.constraint.ConstraintLayout>