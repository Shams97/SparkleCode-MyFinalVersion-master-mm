<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkoyia"
    tools:context=".hint8">
    <Button
        android:id="@+id/tryagain"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbttn"
        android:fontFamily="@font/gabriola"
        android:text="Try Again !"
        android:textColor="@color/textcolor"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.933" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="371dp"
        android:layout_height="227dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="@dimen/text_margin"
        android:text="@string/a_list_is_created"
        android:textAlignment="center"
        android:textColor="@color/LightTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.102" />

    <LinearLayout
        android:id="@+id/bigliner"
        android:layout_width="346dp"
        android:layout_height="238dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedinput"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <Button
            android:id="@+id/blueYes"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/darkblue"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/redIf"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/red"
            android:text="for i in range(len(my_list)):"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/xvalue"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/brown"
            android:text="print(my_list[i])"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>