<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#782C6D"
    tools:context=".hint6">

    <Button
        android:id="@+id/tryagain"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedbttn"
        android:fontFamily="@font/gabriola"
        android:text="Try Again !"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="365dp"
        android:layout_height="227dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:padding="@dimen/text_margin"
        android:text="@string/else_explain"
        android:textAlignment="center"
        android:textColor="@color/LightTextColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />


    <LinearLayout
        android:id="@+id/bigliner"
        android:layout_width="317dp"
        android:layout_height="284dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/roundedinput"
        android:orientation="vertical"
        android:padding="@dimen/text_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77">

        <Button
            android:id="@+id/yYalue"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/greeny"
            android:text="input(x)"
            android:textColor="#fff"
            android:textSize="18dp" />


        <Button
            android:id="@+id/xvalue"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/brown"
            android:text="input(y)"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/redIf"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/red"
            android:text="if x > y :"
            android:textColor="#fff"
            android:textSize="18dp" />


        <Button
            android:id="@+id/blueYes"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/darkblue"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/else_statement"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/brown"
            android:text="else :"
            android:textColor="#fff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/noo"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/red"
            android:textColor="#fff"
            android:textSize="18dp" />
    </LinearLayout>
<!--</android.support.v4.widget.NestedScrollView>-->
</android.support.constraint.ConstraintLayout>